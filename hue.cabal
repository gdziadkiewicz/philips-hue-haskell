name:                hue
version:             0.1.0
-- synopsis:
-- description:
homepage:            https://github.com/txsmith/hue#readme
license:             BSD3
license-file:        LICENSE
author:              Thomas Smith
maintainer:          tnsmith@live.nl
copyright:           2017 Thomas Smith
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10
description: 
    Control Philips Hue lights with Haskell.
    To get started, see the Hue module.

library
  hs-source-dirs:      src
  build-depends:       
  default-language:    Haskell2010
  exposed-modules:     Hue
                     , Hue.Light
                     , Hue.Config
                     , Hue.Auth
                     , Hue.Request
                     , Hue.Discover
                     , Hue.Internal
                     , Hue.Internal.Light
                     , Hue.Internal.Config
                     , Hue.Internal.Auth
                     , Hue.Internal.Request
                     , Hue.Internal.Discover
  build-depends:       base >= 4.7 && < 5
                     , http-client >= 0.5 && < 0.6
                     , http-conduit >= 2.2 && < 2.3
                     , http-types >= 0.9 && < 0.10
                     , blaze-builder >= 0.4 && < 0.5
                     , hostname >= 1 && < 1.1
                     , aeson >= 1.1 && < 1.2
                     , bytestring >= 0.10 && < 0.11
                     , text >= 1.2 && < 1.3
                     , containers >= 0.5 && < 0.6
                     , unordered-containers >= 0.2 && < 0.3
                     , vector >= 0.12 && < 0.13
                     , time >= 1.6 && < 1.7
                     , monad-loops >= 0.4 && < 0.5
                     , mtl >= 2.2.1 && < 2.3
                     , transformers >= 0.5 && < 0.6
                     , path >= 0.5 && < 0.6
                     , path-io >= 1.2 && < 1.3
                     , network >= 2.6 && < 2.7
                     , network-uri >= 2.6 && < 2.7
                     , time >= 1.6 && < 1.7
                     , hexml >= 0.3 && < 0.4
                     , safe-exceptions >= 0.1 && < 0.2
  default-extensions:  ScopedTypeVariables
                     , OverloadedStrings
                     , RecordWildCards
                     , FlexibleInstances
                     , FlexibleContexts
                     , DataKinds
                     , KindSignatures
                     , LambdaCase

